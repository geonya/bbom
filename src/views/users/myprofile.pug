extends ../base
include ../mixins/video

block content
    div.profile__data
        if user.avatarUrl
            img(src=user.avatarUrl).avatar
        h3=user.name
    div.video-grid
        each video in user.videos 
            +video(video)
        else
            span Sorry nothing found.
    if user.id === loggedInUser._id
        div
            a(href=`/users/edit`) Edit Profile
        div
            if !loggedInUser.socialOnly
                a(href=`/users/${loggedInUser._id}/changepassword`) Change Password
    else
        span you are not authorized.
    