mixin video(video)
    a(href=`/videos/${video._id}`).video-mixin
        div.video-mixin__thumb(style=`background-image:url(${video.thumbUrl});background-size:cover;background-position:center;background-image-crossorigin: anonymous | use-credentials`)
        div.video-mixin__data
            span.video-mixin__title=video.title
            div.video-mixin__meta
